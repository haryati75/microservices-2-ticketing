# Auto detect text files and normalize line endings to LF
* text=auto

# Explicitly set LF for all text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.env text eol=lf
.gitignore text eol=lf
.eslintignore text eol=lf
.prettierignore text eol=lf

# Force LF for all husky hooks and scripts
.husky/** text eol=lf

# Binary files - don't normalize
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary